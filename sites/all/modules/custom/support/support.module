        $min = $value->field_ano[LANGUAGE_NONE][0]['value'];
      }
    }
    $anos = range ( date('Y'), $min, -1 );
    $anos[0] = 'Ano';
    $form['#prefix'] = '<div id="formulario_simulador">';
    $form['#suffix'] = '</div>';
