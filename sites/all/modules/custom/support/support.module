                0 => ' --- '
            ),
           '#default_value' => 0,
           '#prefix' => '<div id="select_marca">',
            '#suffix' => '</div>',
             '#ajax' => array(
            'callback' => '_support_simulador_select_modelo',
            'wrapper' => 'select_modelo',
            )
    );
    $form['modelo'] = array(
           '#type' => 'select',
           '#validated' => TRUE,
           '#required' => TRUE,
           '#title' => 'Modelo',
           '#options' => array(
                0 => ' --- '
            ),
           '#default_value' => 0,
           '#prefix' => '<div id="select_modelo">',
            '#suffix' => '</div>',
            '#ajax' => array(
            'callback' => '_support_simulador_select_cilindrada',
            'wrapper' => 'select_cilindrada',
            )
    );
