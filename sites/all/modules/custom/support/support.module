  //listar todos os componentes compativeis com os dados como selects
  

  print 'ANO:'.$ano.' MARCA:'.$marca.' MODELO:'.$modelo.' CILINDRADA:'.$cilindrada;
}

function support_simulador_formulario(){
    //calcular o ano minimo de todos os modelos
