           '#required' => TRUE,
           '#default_value' => 0,
            '#ajax' => array(
            'callback' => '_support_simulador_select_marca',
            'wrapper' => 'select_marca',
            )
    );
    $form['marca'] = array(
           '#type' => 'select',
           '#validated' => TRUE,
