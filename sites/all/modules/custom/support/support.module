function support_simulador(){
  if($_POST['cilindrada'] && $_POST['marca'] && $_POST['modelo'] && $_POST['ano']){
    _support_simulador_componentes();
  }else{
    $formulario = drupal_get_form('support_simulador_formulario');
  }
  print render($formulario);
}

